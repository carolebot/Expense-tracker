{{!-- expenses:expenses --}}
{{#if expenses}}
<!-- expense list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-6 mx-auto">
      <div class="row d-flex justify-content-center p-3">
        <div class="dropdown">
          <button class="btn btn-outline-dark dropdown-toggle font-italic" type="button" id="dropdownMenuButton"
            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Sort</button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="/">All
            </a>
            <a class="dropdown-item" href="/?sort=Food">Food
            </a>
            <a class="dropdown-item" href="/?sort=Traffic">Traffic</a>
            <a class="dropdown-item" href="/?sort=Entertainment">Entertainment</a>
            <a class="dropdown-item" href="/?sort=House">House</a>
            <a class="dropdown-item" href="/?sort=Others">Others</a>
          </div>
          <p class="index-sort" style="display: inline;"> {{#if sort}} by <strong>{{sort}}</strong>{{/if}} {{#unless sort}}by All{{/unless}}</p>
        </div>

      </div>

      <div>
        <p style="font-size: 30px;">總金額:</p>
        <p class="text-right" style="font-size: 80px; color:orange;">{{totalAmount}} 元</p>
      
      </div>


      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Category</th>
            <th scope="col">Description</th>
            <th scope="col">Amount</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          {{#each expenses }}
          <tr>
            <th style="vertical-align: middle; " scope="row" <span><i class="{{this.category}}"></i></span></th>
            <td display="d-flex">
              <p>{{this.name}}</p>
              <p>{{this.date}}</p>
            </td>

            <td style="vertical-align: middle;">{{this.amount}}</td>
            <td style="vertical-align: middle;"><a href="./expenses/{{this._id}}/edit">Edit</a></td>
            <td style="vertical-align: middle;"><button type="button" class="btn btn-danger btn-sm" data-toggle="modal"
                data-target="#delete-{{this._id}}">delete</button></td>
              <!-- Modal -->
              <div class="modal fade" id="delete-{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Delete comfirm</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      Are you sure you want to delete【{{this.name}}】?
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                      <form action="/expenses/{{this._id}}/?_method=DELETE" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
          </tr>
          {{/each}}
        </tbody>
      </table>
      <div class="text-center my-4">
        <a href="./expenses/new">
          <button type="button" class="btn btn-warning  mb-3">Add Expense</button>
        </a>
      </div>


   
    </div>
  </div>
</div>
{{/if}}



{{#unless expenses}}
{{!-- no resutls --}}
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto text-center">
      Sorry, there are no expense about <strong>{{sort}}</strong> :( <br> Back to <a href="/">HomePage</a> Check some other categories.
    </div>
  </div>
</div>
{{/unless}}